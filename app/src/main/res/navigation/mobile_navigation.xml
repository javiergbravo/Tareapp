<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jgbravo.tareapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_task"
        android:name="com.jgbravo.tareapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_task"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_graphic"
        android:name="com.jgbravo.tareapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_graphic"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_folder"
        android:name="com.jgbravo.tareapp.ui.folder.FolderFragment"
        android:label="@string/title_folder"
        tools:layout="@layout/fragment_folder" />
</navigation>